---
import { Icon } from 'astro-icon/components'
---

<div class="newsletter-signup">
	<div class="space-y-6">
		<div class="space-y-3">
			<h2 class="text-3xl font-bold">Stay Updated</h2>
			<p class="text-lg text-secondary dark:text-secondary-dark">
				Get the latest articles and insights delivered directly to your inbox. No spam, just quality content.
			</p>
		</div>

		<form 
			class="space-y-4"
			action="https://your-newsletter-service.com/subscribe" 
			method="POST"
			aria-label="Newsletter signup form"
		>
			<div class="flex flex-col sm:flex-row gap-3">
				<div class="flex-1">
					<label for="email" class="sr-only">Email address</label>
					<input
						type="email"
						id="email"
						name="email"
						placeholder="your.email@example.com"
						required
						class="w-full px-4 py-3 rounded-xl border border-border dark:border-border-dark bg-background dark:bg-background-dark text-foreground dark:text-foreground-dark focus:outline-none focus:ring-2 focus:ring-primary dark:focus:ring-primary-dark focus:border-transparent transition-all"
						aria-label="Email address"
					/>
				</div>
				<button
					type="submit"
					class="btn-primary whitespace-nowrap"
					aria-label="Subscribe to newsletter"
				>
					<Icon name="mdi:email-newsletter" class="w-5 h-5" aria-hidden="true" />
					<span>Subscribe</span>
				</button>
			</div>
			
			<p class="text-sm text-secondary dark:text-secondary-dark">
				By subscribing, you agree to receive updates. You can unsubscribe at any time.
			</p>
		</form>

		<!-- Success/Error Messages (hidden by default, shown via JS) -->
		<div id="newsletter-success" class="hidden p-4 rounded-xl bg-green-500/10 border border-green-500/20 text-green-700 dark:text-green-400" role="alert">
			<div class="flex items-center gap-2">
				<Icon name="mdi:check-circle" class="w-5 h-5" aria-hidden="true" />
				<span>Thanks for subscribing! Check your email to confirm.</span>
			</div>
		</div>

		<div id="newsletter-error" class="hidden p-4 rounded-xl bg-red-500/10 border border-red-500/20 text-red-700 dark:text-red-400" role="alert">
			<div class="flex items-center gap-2">
				<Icon name="mdi:alert-circle" class="w-5 h-5" aria-hidden="true" />
				<span>Something went wrong. Please try again.</span>
			</div>
		</div>
	</div>
</div>

<script>
	// Handle form submission with JavaScript for better UX
	// Replace this with your actual newsletter service integration
	const forms = document.querySelectorAll('.newsletter-signup form');
	
	forms.forEach(form => {
		form.addEventListener('submit', async (e) => {
			e.preventDefault();
			
			const formData = new FormData(form as HTMLFormElement);
			const email = formData.get('email');
			
			// Hide any existing messages
			const successMsg = document.getElementById('newsletter-success');
			const errorMsg = document.getElementById('newsletter-error');
			
			if (successMsg) successMsg.classList.add('hidden');
			if (errorMsg) errorMsg.classList.add('hidden');
			
			try {
				// TODO: Replace with your actual newsletter service API
				// Example services: ConvertKit, Mailchimp, Buttondown, etc.
				const formElement = form as HTMLFormElement;
				const response = await fetch(formElement.action, {
					method: 'POST',
					body: formData,
					headers: {
						'Accept': 'application/json',
					},
				});
				
				if (response.ok) {
					(form as HTMLFormElement).reset();
					if (successMsg) successMsg.classList.remove('hidden');
				} else {
					throw new Error('Subscription failed');
				}
			} catch (error) {
				console.error('Newsletter subscription error:', error);
				if (errorMsg) errorMsg.classList.remove('hidden');
			}
		});
	});
</script>

<style>
	.newsletter-signup input:focus {
		box-shadow: 0 0 0 3px rgba(var(--color-primary-rgb, 0, 102, 255), 0.1);
	}
	
	.newsletter-signup input::placeholder {
		color: var(--color-secondary);
		opacity: 0.6;
	}
</style>
